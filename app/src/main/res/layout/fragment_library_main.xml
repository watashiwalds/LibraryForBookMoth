<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".library.ui.library.LibraryMainFragment">

    <FrameLayout
        android:id="@+id/lib_frame_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <Button
        android:id="@+id/lib_btnSwitchMode_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/libmode_toAuthor"
        android:translationY="-16dp"
        app:icon="@drawable/baseline_edit_square_24"
        app:layout_anchor="@+id/lib_frame_main"
        app:layout_anchorGravity="bottom|center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>